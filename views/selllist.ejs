<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Trading Portfolio</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body class="bg-dark">
  <%- include('navbar') %>
    <div id="customAlert" class="custom-alert w-100, text-center bg-dark fs-3">&nbsp;</div>
    <div class="container">
      <h2 class="text-light text-center mb-2">List of Saleable Shares</h2>
      <div class="container">
        <div class="row">
          <div class="col md-2">
            <span class="text-light">Filter by Portfolio</span>
          </div>
          <div class="col-md-4">
            <input type="text" class="form-control" id="filterPortfolio" onkeyup="filterportfolio()">
          </div>
          <div class="col md-2">
            <span class="text-light">Filter by Share</span>
          </div>
          <div class="col-md-4">
            <input type="text" class="form-control" id="filterShare" onkeyup="filtershare()">
          </div>
        </div>
        <table class="table table-dark table-striped" id="myTable">
          <thead>
            <tr>
              <th>Portfolio</th>
              <th>Share</th>
              <th>Purchase Date</th>
              <th class="text-end">Purchase Rate</th>
              <th class="text-end">Qty in Hand</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% shares.map((share)=>{ %>
              <tr>
                <td>
                  <%= share.portfolioname %>
                </td>
                <td>
                  <%= share.Share %>
                </td>
                <td>
                  <%= share.purdate %>
                </td>
                <td class="text-end">
                  <%= share.rate %>
                </td>
                <td class="text-end">
                  <%= share.qtyinhand %>
                </td>
                <td>
                  <a href="/sell/<%= share.id %>/<%= share.qtyinhand %>"><button
                      class="btn btn-secondary">Sell</button></a>
                </td>
              </tr>
              <% }) %>
          </tbody>
        </table>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous">
      </script>
    <script>
      function filtershare() {
        // Declare variables
        var input, filter, table, tr, td, i, txtValue;
        input = document.getElementById("filterShare");
        filter = input.value.toUpperCase();
        table = document.getElementById("myTable");
        tr = table.getElementsByTagName("tr");

        // Loop through all table rows, and hide those who don't match the search query
        for (i = 0; i < tr.length; i++) {
          td = tr[i].getElementsByTagName("td")[1 ];
          if (td) {
            txtValue = td.textContent || td.innerText;
            if (txtValue.toUpperCase().indexOf(filter) > -1) {
              tr[i].style.display = "";
            } else {
              tr[i].style.display = "none";
            }
          }
        }
      }
      function filterportfolio() {
        // Declare variables
        var input, filter, table, tr, td, i, txtValue;
        input = document.getElementById("filterPortfolio");
        filter = input.value.toUpperCase();
        table = document.getElementById("myTable");
        tr = table.getElementsByTagName("tr");

        // Loop through all table rows, and hide those who don't match the search query
        for (i = 0; i < tr.length; i++) {
          td = tr[i].getElementsByTagName("td")[0];
          if (td) {
            txtValue = td.textContent || td.innerText;
            if (txtValue.toUpperCase().indexOf(filter) > -1) {
              tr[i].style.display = "";
            } else {
              tr[i].style.display = "none";
            }
          }
        }
      }
    </script>
</body>

</html>