<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Trading Portfolio</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body class="bg-dark">
    <%- include('navbar') %>
    <div class="container pt-4">
      <h3 class="text-center text-light">Liquidity : <%= userData.name %></h3>
      <table class="table table-dark table-striped">
        <thead>
          <tr>
            <th>Share</th>
            <th class="text-end">Cost</th>
            <th class="text-end">Profit</th>
            <th class="text-end">Value</th>
          </tr>
        </thead>
        <tbody>
          <% rows.map((row)=>{ %>
            <tr>
              <td><%= row.Name %></td>
              <td class="text-end"><%= (row.cost).toLocaleString('en-in', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %></td>
              <td class="text-end"><%= (row.profit).toLocaleString('en-in', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %></td>
              <td class="text-end"><%= (row.value).toLocaleString('en-in', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %></td>
            </tr>
          <% }) %>
          <tr>
            <td>Totals</td>
            <td class="text-end"><%= (rows[0].totalcost).toLocaleString('en-in', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %></td>
            <td class="text-end"><%= (rows[0].totalprofit).toLocaleString('en-in', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %></td>
            <td class="text-end"><%= (rows[0].totalvalue).toLocaleString('en-in', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>