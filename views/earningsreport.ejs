<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Trading Portfolio</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body class="bg-dark">
    <%- include('navbar') %>
    <div id="customAlert" class="custom-alert w-100, text-center bg-dark fs-3">&nbsp;</div>
    <form action="/earningsreport" method="post">
      <div class="row mt-1">
        <div class="col-2 offset-3 text-light text-end">Select Financial Year</div>
        <div class="col-3">
          <select class="form-select" name="fy" id="fy">
            <option value="0" selected>select...</option>
            <% years.map((year)=>{ %>
              <option value="<%= year.finyear %>"><%= year.finyear %></option>
            <% }) %>
          </select>
        </div>
        <div class="col-1">
          <button class="btn btn-secondary w-100" type="'submit" id="btnSubmit">Go</button>
        </div>
      </div>
    </form>
    <div class="text-light text-center mt-2 fs-4">Earnings for FY <%= fy %> for ITR</div>
    <div class="container">
      <table class="table table-dark table-bordered">
        <thead>
          <tr>
            <th class="align-middle" rowspan="2">Share</th>
            <th>Sell Date</th>
            <th class="text-end">Sell Qty</th>
            <th class="text-end">Sell Rate</th>
            <th class="text-end">Sell Value</th>
            <th class="align-middle text-end" rowspan="2">G Gain</th>
            <th class="align-middle text-end" rowspan="2">T Brokrage</th>
            <th class="align-middle text-end" rowspan="2">N Gain</th>
          </tr>
          <tr>
            <th>Buy Date</th>
            <th class="text-end">Buy Qty</th>
            <th class="text-end">Buy Rate</th>
            <th class="text-end">Buy Value</th>
          </tr>
        </thead>
        <tbody>
          <% rows.map((row)=>{ %>
            <tr>
              <th class="align-middle" rowspan="2"><%= row.Name %></th>
              <% if(row.sellDate == null) { %>
                <th>Not Sold</th>
              <% } else { %>
                <th><%= row.sellDate %></th>
              <% } %>
              <% if(row.sellDate == null) { %>
                <th class="text-end">0</th>
              <% } else { %>
                <th class="text-end"><%= row.sellQty %></th>
              <% } %>
              <% if(row.sellDate == null) { %>
                <th class="text-end">0.00</th>
              <% } else { %>
                <th class="text-end"><%= (row.sellRate).toLocaleString('en-in', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %></th>
              <% } %>
              <% if(row.sellDate == null) { %>
                <th class="text-end">0.00</th>
              <% } else { %>
                <th class="text-end"><%= (row.SellValue).toLocaleString('en-in', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %></th>
              <% } %>
              <th class="align-middle text-end" rowspan="2"><%= (row.Grossgain).toLocaleString('en-in', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %></th>
              <th class="align-middle text-end" rowspan="2"><%= (row.buyBrokrage+row.sellBrokrage).toLocaleString('en-in', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %></th>
              <th class="align-middle text-end" rowspan="2"><%= (row.NetGain).toLocaleString('en-in', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %></th>
            </tr>
            <tr>
              <th><%= row.buyDate %></th>
              <th class="text-end"><%= row.buyQty %></th>
              <th class="text-end"><%= (row.buyRate).toLocaleString('en-in', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %></th>
              <th class="text-end"><%= (row.buyValue).toLocaleString('en-in', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %></th>
            </tr>
          <% }) %>
          <tr>
            <td colspan="5">Totals</td>
            <td class="text-end"><%= (rows[0].totalGrossGain).toLocaleString('en-in', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %></td>
            <td></td>
            <td class="text-end"><%= (rows[0].totalNetGain).toLocaleString('en-in', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script>
      const selectedFY = "<%= fy %>"
      document.getElementById('fy').value = selectedFY;

      function showAlert(message) {
        const alertContainer = document.getElementById('customAlert');
        alertContainer.textContent = message;
        alertContainer.style.color = "red"; // Show the alert

        // Automatically hide the alert after 2000 milliseconds (2 seconds)
        setTimeout(function () {
          alertContainer.style.color = '#212529'; // Hide the alert
        }, 2000);
      };

      function validateForm() {
        const fy = document.getElementById('fy').value;
        if (fy == "0") {
          showAlert("Please select a Financial Year");
          return false;
        }
        return true;
      };

      document.getElementById("btnSubmit").addEventListener('click', function (event) {
        if (!validateForm()) {
          event.preventDefault();
        }
      });
    </script>
  </body>
</html>