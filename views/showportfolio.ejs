<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Trading Portfolio</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body class="bg-dark">
    <%- include('navbar') %>
    <div class="container pt-4">
      <h3 class="text-center text-light">Portfolio : <%= userData.name %></h3>
      <h3 class="text-center text-light">Value : <%= (rows[0].tvalue).toFixed(2) %></h3>
      <h3 class="row">
        <div class="col text-light">Total Gain: <%= (rows[0].tgain).toFixed(2) %></div>
        <div class="col text-light text-end">Day Gain: <%= (rows[0].tdaygain).toFixed(2) %></div>
      </h3  >
      <table class="table table-dark table-striped">
        <thead>
          <tr>
            <th>Share</th>
            <th>Qty</th>
            <th>Avg Cost</th>
            <th>Buy Value</th>
            <th>Price</th>
            <th>Market Value</th>
            <th>Change %</th>
            <th>Days Gain</th>
            <th>Total Gain</th>
          </tr>
        </thead>
        <tbody>
          <% rows.map((row)=>{ %>
            <tr>
              <th><%= row.name %></th>
              <th><%= row.qtyinhand %></th>
              <th><%= (row.buyavg).toFixed(2) %></th>
              <th><%= (row.buycost).toFixed(2) %></th>
              <th><%= (row.price).toFixed(2) %></th>
              <th><%= (row.marketvalue).toFixed(2) %></th>
              <th><%= row.changepercent %></th>
              <th><%= (row.daygain).toFixed(2) %></th>
              <th><%= (row.tgain).toFixed(2) %></th>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>