<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Trading Portfolio</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body class="bg-dark">
    <%- include('navbar') %>
    <div class="container pt-4">
      <h3 class="text-center text-light">Portfolio : <%= userData.name %></h3>
      <h3 class="text-center text-light">Value : <%= (rows[0].tvalue).toFixed(2) %></h3>
      <h3 class="row">
        <% if(rows[0].tgain>=0){ %>
          <div class="col text-success">Total Gain: <%= (rows[0].tgain).toFixed(2) %></div>
          <% }else{ %>
            <div class="col text-danger">Total Gain: <%= (rows[0].tgain).toFixed(2) %></div>
        <% } %>
        <% if(rows[0].tdaygain>=0){ %>
          <div class="col text-success text-end">Day Gain: <%= (rows[0].tdaygain).toFixed(2) %></div>
          <% }else{ %>
            <div class="col text-danger text-end">Day Gain: <%= (rows[0].tdaygain).toFixed(2) %></div>
        <% } %>
      </h3  >
      <table class="table table-dark table-striped">
        <thead>
          <tr>
            <th>Share</th>
            <th class="text-end">Qty</th>
            <th class="text-end">Avg Cost</th>
            <th class="text-end">Buy Value</th>
            <th class="text-end">Price</th>
            <th class="text-end">Market Value</th>
            <th class="text-end">Change %</th>
            <th class="text-end">Days Gain</th>
            <th class="text-end">Total Gain</th>
          </tr>
        </thead>
        <tbody>
          <% rows.map((row)=>{ %>
            <tr>
              <th><%= row.name %></th>
              <th class="text-end"><%= row.qtyinhand %></th>
              <th class="text-end"><%= (row.buyavg).toFixed(2) %></th>
              <th class="text-end"><%= (row.buycost).toFixed(2) %></th>
              <th class="text-end"><%= (row.price).toFixed(2) %></th>
              <th class="text-end"><%= (row.marketvalue).toFixed(2) %></th>
              <% if(row.Change >= 0) { %>
                <th class="text-end text-success"><%= row.changepercent %></th>
                <th class="text-end text-success"><%= (row.daygain).toFixed(2) %></th>
                <% } else { %>
                  <th class="text-end text-danger"><%= row.changepercent %></th>
                  <th class="text-end text-danger"><%= (row.daygain).toFixed(2) %></th>
              <% } %>
              <% if (row.gain>=0) { %>
                <th class="text-end text-success"><%= (row.gain).toFixed(2) %></th>
                <% } else { %>
                  <th class="text-end text-danger"><%= (row.gain).toFixed(2) %></th>
              <% } %>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>