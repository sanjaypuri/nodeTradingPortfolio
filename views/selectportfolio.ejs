<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Trading Portfolio</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body class="bg-dark">
    <%- include('navbar') %>
    <div class="container pt-4">
      <form action="/selectportfolio" method="post">
        <div class="row justify-content-start">
          <div class="col-2 text-light text-end">Select Portfolio</div>
          <div class="col-3">
            <select class="form-select" name="portfolio" id="portfolio" onchange="showportfolio()">
              <option value="0">Select Portfolio</option>
              <% portfolios.map((portfolio)=>{ %>
                <option value="<%= portfolio.id %>"><%= portfolio.name %></option>
              <% }) %>
            </select>
          </div>
          <div class="col"><button type="submit" class="btn btn-secondary">Submit</button></div>
        </div>
      </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>