<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Trading Portfolio</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body class="bg-dark">
    <%- include('navbar') %>
    <div class="container">
      <input class="form-control mt-2" type="text" id="filter" onkeyup="filterFunction()" placeholder="Search for shares..">
      <table class="table table-dark table-striped mt-2" id="sharestable">
        <thead>
          <tr>
            <th>Share</th>
            <th>Previous Price</th>
            <th>Current Price</th>
            <th>High</th>
            <th>Low</th>
            <th>Change</th>
            <th>Change %</th>
          </tr>
        </thead>
        <tbody>
          <% shares.map((share)=>{ %>
            <tr>
              <th><%= share.Name %></th>
              <td><%= share.Previous %></td>
              <td><%= share.Price %></td>
              <td><%= share.High %></td>
              <td><%= share.Low %></td>
              <td><%= share.Change %></td>
              <td><%= share.temp %></td>
            </tr>
            <% }) %>
        </tbody>
      </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script>
      function filterFunction() {
        var input, filter, table, tr, th, i, txtValue;
        input = document.getElementById("filter");
        filter = input.value.toUpperCase();
        table = document.getElementById("sharestable");
        tr = table.getElementsByTagName("tr");
        for (i = 0; i < tr.length; i++) {
          th = tr[i].getElementsByTagName("th")[0];
          if (th) {
            txtValue = th.textContent || th.innerText;
            if(txtValue != 'Name'){
              if (txtValue.toUpperCase().indexOf(filter) > -1) {
                tr[i].style.display = "";
              } else {
                tr[i].style.display = "none";
              }
            }
          }
        }
      }
    </script>
  </body>
</html>